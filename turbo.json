{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "env": ["STRAPI_AUTH_TOKEN", "PREVIEW_SECRET"],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "dev": {
      "env": ["STRAPI_AUTH_TOKEN", "PREVIEW_SECRET"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "env": ["STRAPI_AUTH_TOKEN", "PREVIEW_SECRET"],
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
