{
  "collectionName": "components_sections_heroes",
  "info": {
    "displayName": "Hero",
    "description": "Main hero section with title, subtitle, image and CTAs"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "ctas": {
      "type": "component",
      "component": "button.ct-as",
      "repeatable": true,
      "max": 2
    },
    "layout": {
      "type": "enumeration",
      "enum": ["centered", "left-aligned", "image-right", "image-left"],
      "default": "centered"
    }
  }
}
